{
  "name": "k-mita-analytics-dashboard",
  "version": "1.0.0",
  "description": "Dashboard de análisis para K-mita - Negocio de café con métricas específicas de Shopify",
  "main": "simple-dashboard.html",
  "scripts": {
    "start": "python server.py",
    "build": "tailwindcss -i ./styles.css -o ./shopify-analytics-styles.css --watch",
    "build:prod": "tailwindcss -i ./styles.css -o ./shopify-analytics-styles.css --minify",
    "dev": "python -m http.server 8080",
    "deploy": "netlify deploy --prod"
  },
  "keywords": [
    "dashboard",
    "analytics",
    "shopify",
    "coffee",
    "k-mita",
    "business-intelligence"
  ],
  "author": "K-mita Analytics Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/k-mita/analytics-dashboard.git"
  },
  "homepage": "https://k-mita-analytics.netlify.app",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0"
  }
}
